<div><%= flash[:notice] %></div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user , book: @book_new %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
		      <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
              <br>
              <%= link_to @user.name ,user_path(@user.id) %>
            </td>
            <td><a><%= link_to @book.title ,book_path(@book.id) %></a></td>
            <td><a><%= @book.body %></a></td>
            <% if @book.user == current_user %>
              <td><a><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success" %></a></td>
              <td><a><%= link_to 'Destroy', book_path(@book.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %></a></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>